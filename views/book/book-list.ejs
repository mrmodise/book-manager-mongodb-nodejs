<% layout('layout') -%>
<div class="jumbotron">
<h1>Knowledge is power</h1>
<p class="lead">To add a new book, click the button below </p>
<p><a class="btn btn-lg btn-success" href="/book" role="button">Add Your Copy</a></p>
</div>
<div class="row marketing">
<div class="col-lg-12">
	<h3>All Books:</h3>
	<% if (success.length > 0 ) {%>
		<div class="alert alert-danger alert-dismissible" role="alert">
  			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  				<strong>Deleted!</strong> <%= success %>
		</div>
	<% } %>
	<table class="table table-hover">
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Category</th>
			<th>Update</th>
			<th>Delete</th>	
		</tr>
		<% for (var i = 0; i < book.length; i++) { %>
		<tr>
			<td><%= book[i].title %></td>
			<td><%= book[i].author %></td>
			<td><%= book[i].category %></td>
			<td>
			<a href="/update-book/<%= book[i]._id %>">
			<span class="glyphicon glyphicon-edit"></span>
				</a>
			</td>
			<td> <form action="/delete-book/<%= book[i]._id %>" method="post">
			<button><span class="glyphicon glyphicon-trash"></span></button>
		</form>
			</td>
		</tr>
		<% } %>
	</table>
</div>
</div>