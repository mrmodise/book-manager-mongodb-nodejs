<% layout('layout') %>
<div class="row marketing">
<div class="col-lg-12">
	<h3>Update an existing book:</h3>
	<div class="col-lg-10">
	<% if (success.length > 0 ) {%>
		<div class="alert alert-success alert-dismissible" role="alert">
  			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  				<strong>Update!</strong> <%= success %>
		</div>
	<% } %>
	<form method="post" class="well">
		<div class="form-group">
			<label for="">Title:</label>
			<input type="text" class="form-control" value="<%= book.title%>" name="title" required>
		</div>
		<div class="form-group">
			<label for="">Author:</label>
			<input type="text" class="form-control" value="<%= book.author %>" name="author" required>
		</div>
		<div class="form-group">
			<label for="">Category:</label>
			<input type="text" class="form-control" value="<%= book.category %>" name="category" required>
		</div>
		<div class="form-group">
			<button class="btn btn-primary">Update</button>
		</div>
	</form>
	</div>
</div>
</div>